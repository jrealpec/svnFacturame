@model IEnumerable<com.svnFacturame.cloud.frontend.core.Models.TR000020>
@{
    ViewData["Title"] = "Index";
}
<ol class="breadcrumb">
    <li class="active"><i class="fas fa-home fa-fw"></i>@Convert.ToString(string.Format("{0:MMMM dd, yyyy}", DateTime.Now.ToUniversalTime().AddHours(-5)))</li>
</ol>
<div class="col-sm-12">
    <div class="col-md-6">
        <h3><strong>Listado de Facturas</strong></h3>
    </div>
    <div class="col-md-6">
        @Html.ActionLink("Add New", "Create", "TR000020", null, new { @class = "btn btn-primary buttonAdd" })
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="col-sm-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div>
                        <table id="tblTR000020List" class="display table table-bordered dataTable table-hover" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>NumeroFactura</th>
                                    <th>NumeroDocumento</th>
                                    <th>Nombre</th>
                                    <th>Monto</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="align-middle">@item.Numero</td>
                                        <td class="align-middle">@item.NumeroDoc</td>
                                        <td class="align-middle">@item.Nombre</td>
                                        <td class="align-middle">@String.Format("{0:C}", @item.Monto)</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { Id = @item.Id }, new { @class = "btn btn-primary" })
                                            @Html.ActionLink("Delete", "Delete", new { Id = @item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you wish to delete this registry?');" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .imageStyle {
        width: 100px;
        height: 100px;
    }

    .buttonAdd {
        float: right;
        margin-top: 20px;
    }
</style>
<link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts {
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $(function () {
                $('#tblTR000020List').DataTable({
                    "paging": true,
                    "lengthChange": true,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": true,
                });
            });

        });
    </script>
}